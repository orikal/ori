<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalma.tictactoe.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn1"
                    android:textSize="80dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn2"
                    android:textSize="80dp" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn3"
                    android:textSize="80dp"
                    android:visibility="visible" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn4"
                    android:textSize="80dp" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn5"
                    android:textSize="80dp" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn6"
                    android:textSize="80dp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn7"
                    android:textSize="80dp" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn8"
                    android:textSize="80dp" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:onClick="clickbtn9"
                    android:textSize="80dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:onClick="clickReset"
                android:text="Reset" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
